<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VITTY" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background</item>
        <item name="colorSecondaryVariant">@color/background</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins_400</item>
        <item name="android:textColor">@color/translucent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:navigationBarColor">@color/tab_back</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="popupMenuBackground">@drawable/menu_background</item>
    </style>

    <style name="Theme.VITTY.SettingsScreen" parent="Theme.VITTY">
        <item name="colorSecondary">@color/translucent_imp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/translucent</item>
        <item name="colorControlActivated">@color/translucent_imp</item>
        <item name="colorSwitchThumbNormal">@color/grey</item>
        <item name="android:colorForeground">@color/white</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="alertDialogTheme">@style/popupAppearance</item>
    </style>

    <style name="popupAppearance" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/tab_back</item>
        <item name="android:textColor">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/translucent_imp</item>
        <item name="buttonBarNeutralButtonStyle">@style/listButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/listButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/listButton</item>
        <item name="android:fontFamily">@font/poppins_400</item>
    </style>

    <style name="listButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:strokeColor">@color/next_class</item>
        <item name="strokeColor">@color/next_class</item>
        <item name="rippleColor">@color/translucent</item>
        <item name="fontFamily">@font/poppins_400</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>

    </style>

    <style name="TabTextAppearance" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabTextAppearance2" parent="">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_600</item>
    </style>

    <style name="TitleTextAppearance" parent="">
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_700</item>
    </style>

    <style name="SubtitleTextAppearance" parent="">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_500</item>
    </style>

    <style name="ThemeOverlay.VITTY.AppWidgetContainer" parent="">
        <item name="android:fontFamily">@font/poppins_400</item>
        <item name="android:textColor">@color/translucent</item>
        <item name="appWidgetBackgroundColor">@color/background</item>
        <item name="appWidgetTextColor">@color/translucent</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>